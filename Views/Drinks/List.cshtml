@model DrinkAndGo.ViewModels.DrinkListViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Drink List</title>
    <!-- Add Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>All drinks are shown here</h2>
                <h2>@Model.CurrentCategory</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var drink in Model.Drinks)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="@drink.ImageThumbnailUrl" alt="" class="img-fluid" />
                        <div class="caption">
                            <h3 class="pull-right">@drink.Price.ToString("c")</h3>
                            <h3>
                                <a>@drink.Name</a>
                            </h3>
                            <p>@drink.ShortDescription</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <!-- Add Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
